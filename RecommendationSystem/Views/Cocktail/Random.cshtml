<link rel="stylesheet" type="text/css" href="css/coctail.css">
@{
    ViewData["Title"] = "Random";
}
@model System.Collections.Generic.List<RecommendationSystem.Models.Drink>?


@if (Model?.Count > 0)
{
    <div class="cocktail-container">
        @foreach (var cocktail in Model)
        {
            <div class="cocktail-card">
                <ul class="cocktail-details">
                    <li style="text-align: center; list-style-type: none; font-size: 30px;">Name: @cocktail.strDrink</li>
                    <br/>
                    <li><strong>Glass type:</strong> @cocktail.strGlass</li>
                    <li><strong>Category:</strong> @cocktail.strCategory</li>
                    <li><strong>How to prepare:</strong> @cocktail.strInstructions</li>
                    <li>
                        <strong>Ingredients:</strong>
                        <ul class="ingredients-list">
                            @foreach (var ingredient in cocktail.ingredients)
                            {
                                <li>@ingredient.name - @ingredient.measure</li>
                            }
                        </ul>
                    </li>
                    <li style="list-style-type: none; text-align: center;">
                        <img src="@cocktail.strDrinkThumb" alt="Image of @cocktail.strDrink"/>
                    </li>
                </ul>
                <br/><br/>
            </div>
        }
    </div>
}
else
{
    <p>No cocktails found.</p>
}